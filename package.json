{
  "name": "techbros",
  "version": "2.0.1",
  "description": "A PWA platform for sharing study resources with offline capabilities and P2P file sharing.",
  "keywords": [
    "pwa",
    "education",
    "offline-first",
    "study-resources",
    "javascript",
    "webrtc",
    "p2p"
  ],
  "homepage": "https://github.com/ny-collins/techbros#readme",
  "bugs": {
    "url": "https://github.com/ny-collins/techbros/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ny-collins/techbros.git"
  },
  "license": "MIT",
  "author": "Collins Mwangi",
  "type": "module",
  "main": "scripts/add_resource.js",
  "scripts": {
    "add": "node scripts/add_resource.js",
    "dev": "python3 -m http.server 8000 --directory public",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "node -e \"const fs=require('fs'); let m=fs.readFileSync('public/manifest.json','utf8'); m=m.replace(/__APP_VERSION__/g,'2.0.0'); fs.writeFileSync('public/manifest.json',m);\"",
    "dev:vite": "vite dev --host"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "inquirer": "^13.1.0",
    "music-metadata": "^11.10.3",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^2.4.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}